{% macro nav_bar_option(endpoint, label) %}
    {% if active == label %}
        <span class="nav-bar-option active">{{ label }}</span>
    {% else %}
        <a href="{{ url_for(endpoint) }}" class="nav-bar-option link">{{ label }}</a>
    {% endif %}
{% endmacro %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="{% block author %}Mariusz Tang{% endblock %}">
    <meta name="description" content="{% block description required %}{% endblock %}">
    <title>{% block title required %}{% endblock %} â€” SkateUCL</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <header id="nav-bar">
        <img id="nav-bar-logo" src="{{ url_for('static', filename='img/logo.png') }}" alt="The SkateUCL logo.">
        <button type="button" id="nav-bar-expander" onclick="document.getElementById('nav-bar-options').classList.toggle('expanded')"></button>
        <nav id="nav-bar-options">
            {{ nav_bar_option("index", "Home")|safe }}
            {{ nav_bar_option("index", "Events")|safe }}
            {{ nav_bar_option("index", "Equipment")|safe }}
            {{ nav_bar_option("index", "Join us")|safe }}
        </nav>
    </header>
    <h1>{% block heading %}{{ self.title() }}{% endblock %}</h1>
</body>
</html>
